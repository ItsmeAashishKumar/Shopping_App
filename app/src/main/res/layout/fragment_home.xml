<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <SearchView
            android:queryHint="Search Products"
            android:background="#fff"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="300dp"
            android:layout_height="50dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/image"
            android:layout_width="match_parent"
            android:layout_height="170dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        android:text="PRODUCT CATEGORIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="280dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FBC6C6"
                android:elevation="300dp"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/men"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:backgroundTint="#BDE1F1"
                app:cardCornerRadius="10dp"
                android:layout_width="100dp"
                android:elevation="300dp"
                android:layout_weight="1"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/woman"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:elevation="300dp"
                android:backgroundTint="#E5E0B1"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/chiler"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#E4FCC8"
                android:layout_weight="1"
                android:elevation="300dp"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/wa"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:layout_width="100dp"
                android:elevation="300dp"
                android:backgroundTint="#EED0A5"
                android:layout_weight="1"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/bags"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:elevation="300dp"
                android:backgroundTint="#C0A2F4"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:layout_height="90dp">
                <ImageView
                    android:src="@drawable/shoes"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:backgroundTint="#E7B5EF"
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="1"
                android:elevation="300dp"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/makeup"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:elevation="300dp"
                android:backgroundTint="#EBC3B6"
                android:layout_weight="1"
                android:layout_height="90dp">

                <ImageView
                    android:src="@drawable/appliances"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:layout_width="100dp"
                android:elevation="300dp"
                android:layout_weight="1"
                android:backgroundTint="#F6EEA8"
                android:layout_height="90dp">


                <ImageView
                    android:src="@drawable/vegeies"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>